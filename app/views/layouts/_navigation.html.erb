<div class="headernav">
  <div class="container">
    <div class="row">
      <div class="col-lg-1 col-xs-3 col-sm-2 col-md-2 logo ">
        <%= link_to posts_path do %>
          <%= image_tag "images/logo.jpg" %>
          <% end %>
      </div>
      <div class="col-lg-3 col-xs-9 col-sm-5 col-md-3 selecttopic">
        <%= select_tag :topics, options_for_select(Topic.all.collect {
            |t|
           link_to t.name, ""})%>

      </div>
      <div class="col-lg-4 search hidden-xs hidden-sm col-md-3">
        <div class="wrap">
          <form action="#" method="post" class="form">
            <div class="pull-left txt"><input type="text" class="form-control" placeholder="Search Topics"></div>
            <div class="pull-right"><button class="btn btn-default" type="button"><i class="fa fa-search"></i></button></div>
            <div class="clearfix"></div>
          </form>
        </div>
      </div>
      <div class="col-lg-4 col-xs-12 col-sm-5 col-md-4 avt">
        <div class="stnt pull-left">
          <%= link_to "Start New Topic", new_post_path, class: "btn btn-primary" %>
          </form>
        </div>

        <% if logged_in? %>
          <div class="env pull-left"><%= link_to "Logout", logout_path %></div>
          <h5><%= link_to current_user.username, user_path(current_user) %></h5>
          <% else %>
          <div class="env pull-left"><%= link_to " Login", login_path %></div>
          <h5><%= link_to "Sign Up ", signup_path %> </h5>

      <%end%>

        <div class="clearfix"></div>
      </div>
    </div>
  </div>
</div>

