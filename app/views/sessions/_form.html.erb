<div class="post">
  <%= form_for :session, :html => {class: "form newtopic", role: "form"} do |field|%>
    <div class="postinfotop">
      <h2>Create New Account</h2>
    </div>

    <!-- acc section -->
    <div class="accsection">
      <div class="acccap">
        <div class="userinfo pull-left">&nbsp;</div>
        <div class="clearfix"></div>
      </div>
      <div class="topwrap">
        <div class="userinfo pull-left">
          <div class="avatar">
            <img src="" alt="" />
          </div>
          <div class="imgsize">60 x 60</div>
          <div>
            <button class="btn">Add</button>
          </div>
        </div>
        <div class="posttext pull-left">
          <div class="row">
            <div class="col-lg-12 col-md-12">
              <%= field.text_field :username, class: "form-control", placeholder: "Username" %>
            </div>

          </div>

          <div class="row">
            <div class="col-lg-6 col-md-12">
              <%= field.password_field :password, class:"form-control", placeholder: "Password"%>
            </div>

          </div>

        </div>
        <div class="clearfix"></div>
      </div>
    </div><!-- acc section END -->



    <div class="postinfobot">

      <div class="pull-right postreply">
        <div class="pull-left">
          <%= field.submit class: "btn btn-primary" %>
        </div>
        <div class="clearfix"></div>
      </div>


      <div class="clearfix"></div>
    </div>
    </form>
  <% end %>
</div><!-- POST -->

