


<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-8">



      <!-- POST -->
      <div class="post">
        <%= form_for(@post, :html => {class:"form newtopic", role: "form" }) do |field| %>

          <div class="topwrap">
            <div class="userinfo pull-left">
              <div class="avatar">
                <div class="status red">&nbsp;</div>
              </div>


            </div>
            <div class="posttext pull-left">

              <div>
                <%= field.text_field :title, class: "form-control", placeholder: "Enter post title" %>
              </div>

              <div class="row">
                <div class="col-lg-6 col-md-6">
                  <select name="category" id="category" class="form-control">
                    <option value="" disabled="disabled" selected="selected">Select Category</option>
                    <option value="op1">Option1</option>
                    <option value="op2">Option2</option>
                  </select>
                </div>
                <div class="col-lg-6 col-md-6">
                  <select name="subcategory" id="subcategory" class="form-control">
                    <option value="" disabled="disabled" selected="selected">Select Subcategory</option>
                    <option value="op1">Option1</option>
                    <option value="op2">Option2</option>
                  </select>
                </div>
              </div>

              <div>
                <%= field.text_area :description, class: "form-control", placeholder: "Type in the description"%>
              </div>
              <div class="row newtopcheckbox">
                <div class="col-lg-6 col-md-6">
                  <div><p>Who can see this?</p></div>
                  <div class="row">
                    <div class="col-lg-6 col-md-6">
                      <div class="checkbox">
                        <label>
                          <input type="checkbox" id="everyone"> Everyone
                        </label>
                      </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                      <div class="checkbox">
                        <label>
                          <input type="checkbox" id="friends"> Only Friends
                        </label>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-lg-6 col-md-6">


                </div>
              </div>


            </div>
            <div class="clearfix"></div>
          </div>
          <div class="postinfobot">


            <div class="pull-right postreply">
              <div class="pull-left smile"><a href="#"><i class="fa fa-smile-o"></i></a></div>
              <div class="pull-left"><%= field.submit class: "btn btn-primary"%>
              </div>
              <div class="clearfix"></div>
            </div>


            <div class="clearfix"></div>
          </div>
        <% end %>
      </div><!-- POST -->







    </div>

  </div>
</div>